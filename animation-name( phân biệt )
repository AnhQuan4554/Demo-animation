<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>keyframes-2</title>
        <style>
            .ball1{
                position: relative;
                width: 150px;
                height: 150px;
                background: red;
                border-radius: 50%;
                animation: move 4s linear infinite;
            }
            .ball2 {
           
                margin-top: 170px;
                position: absolute;
                width: 150px;
                height: 150px;
                background: red;
                border-radius: 50%;
                animation: move2 4s linear infinite;
               
            }
            .ball3 {    
          
               margin-top: 160px;
                position: absolute;
                width: 150px;
                height: 150px;
                background: rgb(179, 163, 163);
                border-radius: 50%;
                animation: initial    4s linear infinite;
            }
       
            @keyframes move { /* đơn thuẩn di chuyển từ trái sang phải */
                from {
                    left: 0;
                }
                to {
                    left: 80%; 
                    background-color: red;
                }
            }
            @keyframes move2{/*  di chuyển xuống dưới sang trái  rồi quay lại vị trí ban đầu  */
                /* khoảng cách top left là so với thẻ cha cha nó  */
                0%,100% {
                    top:  0px;
                    left: 0px; 
                }
                40% {
                    top: 160px;
                    left: 60%; 
                    background-color: rgb(255, 238, 0);
                }
                80% {
                    top: 180px;
                    left: 80%; 
                    background-color: rgb(255, 238, 0);
                }
              
            }
          
        </style>
    </head>
   
    <body>
        <h1>CSS Animations</h1>
      

            <div class="ball1">
                <div class="ball2">
                    <div class="ball3"></div>
                </div>
            </div>
        
        <input id="ball1" type="text" placeholder="Quả bóng 1 ">
        <input id="ball2" type="text" placeholder="Quả bóng 2 ">
        <input id="ball3" type="text" placeholder="Quả bóng 3 ">
        <!-- js -->
        <script>
          const input1 = document.querySelector('#ball1');
          const ball1 = document.querySelector('.ball1')
          input1.onchange = (e)=>{
              const text = e.target.value;
              ball1.style.animationName = text;
              
          }

          const input2 = document.querySelector('#ball2');
          const ball2 = document.querySelector('.ball2')
         
          input2.onchange = (e)=>{    
              const text = e.target.value;
              ball2.style.animationName = text;
            
          }
          const input3 = document.querySelector('#ball3');
          const ball3 = document.querySelector('.ball3')
          input3.onchange = (e)=>{
              const text = e.target.value;
              ball3.style.animationName = text;
          }
        </script>
    </body>
</html>
