             <h1>The @keyframes move_right</h1>
        <div class="demo-keyframe">

            <div class="ball">
                  
            </div>  
            <div class="circle">

            </div>
        </div>
    <style>
        h1{
            text-align: center;
        }
        .demo-keyframe{
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
            position: relative;
        }
        .ball{ /* quả bóng màu đỏ  */
           position: absolute;
            width: 150px;
            height: 150px;
            background: red;
            border-radius: 50%;
            animation: move_right 5s ease infinite;
        }
        .circle{
            position: absolute;
            width: 155px;
            height: 155px;
            background-color: transparent;
            border: 3px solid yellowgreen;
            border-radius: 50%;
            right: -6px;
        }
        @keyframes move_right{
            from{
                top: 5px;  /*  vị trí ban đầu là cách top 5px ,và khoảng cách 
                sát lề trái   */
                right: 100%;
            }
            to{
               top: 5px;
                right: 0; /* sau đó di chuyển đến bị trí bên phải  */
            }

        }
        
    </style>
